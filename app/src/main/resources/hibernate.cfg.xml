<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configuración de la base de datos PostgreSQL -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/pap2025</property>
        <property name="hibernate.connection.username">pap2025_user</property>
        <property name="hibernate.connection.password">1234</property>
        
        <!-- Configuración de Hibernate -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <property name="hibernate.connection.pool_size">10</property>
        
        <!-- Mapeo de clases -->
        <mapping class="pap2025.logica.Usuario"/>
        <mapping class="pap2025.logica.Lector"/>
        <mapping class="pap2025.logica.Bibliotecario"/>
        <mapping class="pap2025.logica.Material"/>
        <mapping class="pap2025.logica.Libro"/>
        <mapping class="pap2025.logica.ArtEspeciales"/>
        <mapping class="pap2025.logica.Prestamo"/>
        <mapping class="pap2025.datatypes.DTDimensiones"/>
    </session-factory>
</hibernate-configuration>
